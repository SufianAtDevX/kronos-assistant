// package.json
{
  "name": "kronos-ai-electron",
  "version": "1.0.0",
  "description": "Kronos AI Assistant desktop application with React frontend and Electron",
  "main": "main.js",
  "private": true,
  "scripts": {
    "start-react": "cd frontend && npm start",
    "build-react": "cd frontend && npm run build",
    "electron-dev": "concurrently \"npm run start-react\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build-react && electron-builder",
    "postinstall": "cd frontend && npm install"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.7",
    "concurrently": "^8.2.2",
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.kronos.ai",
    "productName": "Kronos AI Assistant",
    "files": [
      "main.js",
      "frontend/build/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    }
  }
}